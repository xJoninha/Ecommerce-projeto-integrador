<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css">
    <link rel='stylesheet' href='/stylesheets/produtos.css' />
</head>

<body>

    <%- include('../views/partials/header'); %>

        <main>
            <h1>NOSSOS PRODUTOS</h1>
            <br>

            <a class="botaoVoltar" href="/">Voltar à Página Inicial</a>


            <br>

            <section class="content">
                <% for( let produto of produtos) { %>
                    <section class="containerVinho">

                        <div class="contentImage">
                            <a href=" /produtos/produto/<%= produto.id %> ">
                                <img src="<%= produto.image %> " alt="">
                            </a>
                        </div>
                        <h3>
                            <%= produto.nome %>
                        </h3>
                        <p>R$ <%= produto.preco %>
                        </p>

                        <!-- Botão de adicionar a Adega -->
                        <form method="post" action="/pedidos">
                            <input type="hidden" name="produtos_id" value="<%= produto.id %>" />
                            <input min="1" type="number" id="quantidade" name="quantidade" value="1"/>
                            <button type="submit" >Adicionar a Adega</button>
                          </form>

                    </section>
                    <% } %>
            </section>

        </main>


        <%- include('./partials/footer') %>

</body>

</html>