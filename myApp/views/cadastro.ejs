<!DOCTYPE html>
<html>

    <head>
        <link rel="stylesheet" href="/stylesheets/cadastro-style.css">
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    
    <body>
     
        <%- include('../views/partials/header'); -%>

    
        <main>
    
            <div class="subtitle">
                <h1>Cadastro</h1>
            </div> 
    
            <section class="data">
    
                <h2>Dados Pessoais</h2>
                <form action="" method="post">
                    <label for="email">E-mail:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'email') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="text" name="email" id="email">                    
                    
                    <label for="cpf">CPF:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'cpf') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="number" name="cpf" id="cpf">


                    <label for="name">Nome:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'name') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="text" name="name" id="name">

                    <label for="last_name">Sobrenome:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'last_name') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="text" name="last_name" id="last_name">

                    <label for="birthday">Data de nascimento:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'birthday') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="date" name="birthday" id="birthday">
    
                    <div class="pessoal_data_age">
                        <label for="age">Tenho mais de 18 anos.*</label>
                        <input type="checkbox" name="age" id="age" class="age_input">
                        <% if (typeof errors !== 'undefined') { %>
                            <% for(let error in errors) { %>
                            <% if(error == 'age') { %>
                                <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                            <% } %>
                            <% } %>
                    <% } %>
                    </div>
    
                    <label for="telephone">Telefone celular:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'telephone') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="tel" name="telephone" id="telephone">
    
    
                    <h2>Endereço</h2>
    
    
                    <label for="destinatario">Nome do destinatário e/ou ponto de referência:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'destinatario') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="text" name="destinatario" id="destinatario">
                    
                    <label for="cep">CEP:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'cep') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="number" name="cep" id="cep">

                    <label for="name">Logradouro:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'logradouro') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="text" name="logradouro" id="logradouro">

                    <label for="cidade_bairro">Cidade e Bairro:*</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'cidade_bairro') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="text" name="cidade_bairro" id="cidade_bairro">

                    <label for="numero">Número*:</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'numero') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="number" name="number" id="numero">

                    <label for="complemento">Complemento:</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'complemento') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="text" name="complemento" id="complemento">

                    <label for="password">Senha*:</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'password') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="password" name="password" id="password">

                    <label for="confirm_password">Confirmar Senha*:</label>
                    <% if (typeof errors !== 'undefined') { %>
                        <% for(let error in errors) { %>
                        <% if(error == 'confirm_password') { %>
                            <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                        <% } %>
                        <% } %>
                <% } %>
                    <input type="password" name="confirm_password" id="confirm_password">

                    <div class="political_privacity">
                        <label for="terms">Ciente das políticas de privacidade e termos de uso do site.*</label>
                        <input type="checkbox" name="terms" id="terms" class="political_privacity_input">
                        <% if (typeof errors !== 'undefined') { %>
                            <% for(let error in errors) { %>
                            <% if(error == 'terms') { %>
                                <p style="font-size:larger; color: red;"><%= errors[error].msg %></p>
                            <% } %>
                            <% } %>
                    <% } %>
                    </div>
                    <button type="submit">Completar cadastro</button>
    
                </form>
    
            </section>
    
    
    
    
        </main>
    
    </body>
    
</html>
